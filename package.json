{
  "name": "app-data-backup",
  "version": "0.0.1",
  "productName": "软件数据备份",
  "description": "Windows 软件数据备份还原工具。Windows software data backup and restore tool.",
  "appDescription": "Windows 上免费且开源的软件数据备份还原工具。\n一键备份或还原数据指定数据，方便更换设备/系统时实现用户数据迁移。\n目前支持的软件较少，有需要新增的软件请到github上提issue，或者发邮件告知。",
  "author": {
    "name": "hzhilong",
    "email": "hzhilong777@outlook.com",
    "url": "https://github.com/hzhilong/app-data-backup"
  },
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev-e": "chcp 65001 && vite --config vite.electron.config.ts",
    "build-only": "vite build",
    "build-only-e": "vite build --config vite.electron.config.ts && electron-builder",
    "build": "run-p type-check \"build-only {@}\" --",
    "build-e": "run-p type-check \"build-only-e {@}\" --",
    "preview": "vite preview",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@types/log4js": "^0.0.33",
    "@vueuse/rxjs": "^13.0.0",
    "async-mutex": "^0.5.0",
    "axios": "^1.8.4",
    "consola": "^3.4.0",
    "dayjs": "^1.11.13",
    "dexie": "^4.0.11",
    "element-plus": "^2.9.7",
    "iconv-lite": "^0.6.3",
    "lodash": "^4.17.21",
    "log4js": "^6.9.1",
    "mitt": "^3.0.1",
    "nanoid": "^5.1.5",
    "pinia": "^2.3.1",
    "pinia-plugin-persistedstate": "^4.2.0",
    "regedit": "^5.1.3",
    "remixicon": "^4.6.0",
    "rxjs": "^7.8.2",
    "vue": "^3.5.13",
    "vue-i18n": "^12.0.0-alpha.2",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@eslint/js": "^9.18.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/rollup": "^0.51.4",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitejs/plugin-vue-jsx": "^4.1.1",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.3.0",
    "@vue/tsconfig": "^0.7.0",
    "electron": "^35.0.3",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.18.0",
    "eslint-plugin-vue": "^9.32.0",
    "jiti": "^2.4.2",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.4.2",
    "rollup": "^4.35.0",
    "sass": "^1.85.0",
    "sass-loader": "^16.0.5",
    "typescript": "~5.7.3",
    "unplugin-auto-import": "^19.0.0",
    "unplugin-vue-components": "^28.0.0",
    "vite": "^6.0.11",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-vue-devtools": "^7.7.1",
    "vue-tsc": "^2.2.0"
  },
  "build": {
    "appId": "io.github.hzhilong.appdatabackup",
    "productName": "软件数据备份",
    "asar": true,
    "copyright": "Copyright © 2025 hzhilong",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist",
      "dist-electron"
    ],
    "win": {
      "icon": "public/favicon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "license": "LICENSE",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "public/favicon.ico",
      "uninstallerIcon": "public/favicon.ico"
    },
    "extends": null,
    "extraFiles": [
      {
        "from": "LICENSE",
        "to": "."
      }
    ],
    "extraResources": [
      {
        "from": "node_modules/regedit/vbs",
        "to": "regedit/vbs",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "public/plugins",
        "to": "plugins",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
