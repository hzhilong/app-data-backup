{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "vite-env.d.ts",
    "electron/*.d.ts",
    "vite.config.*",
    "vite.*.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "eslint.config.*",
    "electron/**.ts"
  ],
  "compilerOptions": {
    "noEmit": true,
    // 不生成编译输出文件（仅类型检查）
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    // 增量编译信息存储位置
    "module": "ESNext",
    // 使用 ESM 模块语法
    "moduleResolution": "Bundler",
    // 模块解析策略（兼容 Vite/Rollup 等打包工具）
    "types": [
      "node"
    ],
    // 包含 Node.js 类型定义
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}