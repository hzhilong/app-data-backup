{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "vite-env.d.ts",
    "auto-imports.d.ts",
    "components.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxImportSource": "vue",
    "jsxFragmentFactory": "Fragment",
    "strict": true
  }
}